    <div class="container" style="margin-top: 50px; max-width: 600px;">
      <h5 class="center-align">Formulario de Registro</h5>
      <form action="/validar" method="post">
        <div class="input-field">
            <label for="first_name">Nombre</label>
            <input id="nombre" type="text" name="nombre" class="validate">
        </div>
    
        <div class="input-field">
            <label for="last_name_p">Apellido Paterno</label>
            <input id="apellido_paterno" type="text" name="apellido_paterno" class="validate">
        </div>
    
        <div class="input-field">
            <label for="last_name_m">Apellido Materno</label>
            <input id="apellido_materno" type="text" name="apellido_materno" class="validate">
        </div>
    
        <div class="input-field">
            <label for="registration_date">Fecha de Registro</label>
            <input type="text" class="datepicker" id="fecha_registro" name="fecha_registro" placeholder="Selecciona o ingresa la fecha">
        </div>
    
        <div class="input-field">
            <select id="semestre" class="browser-default" name="semestre">
                <option value="" disabled selected>Selecciona tu semestre</option>
                <option value="1">1°</option>
                <option value="2">2°</option>
                <option value="3">3°</option>
                <option value="4">4°</option>
                <option value="5">5°</option>
                <option value="6">6°</option>
                <option value="7">7°</option>
                <option value="8">8°</option>
                <option value="9">9°</option>
            </select>
        </div>
    
        <div class="input-field">
            <label for="age">Edad</label>
            <input id="edad" type="number" min="1" max="99" name="edad" class="validate">
        </div>
    
        <div class="center-align">
            <button class="btn waves-effect waves-light orange" type="submit" value="Registrar" style="margin-bottom: 20px;">ENVIAR
                <i class="material-icons right">send</i>
            </button>
        </div>
    </form>
  </div>


